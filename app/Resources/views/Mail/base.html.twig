<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    {% include ':Mail:base.css.twig' %}
</head>
<body>
<table class="body">
    <tr>
        <td class="center" align="center" valign="top">
            <center>
                <table class="row header">
                    <tr>
                        <td>
                            <table class="container">
                                <tr>
                                    <td class="wrapper">
                                        <table class="four columns">
                                            <tr>
                                                <td class="left-text-pad">
                                                    <img src="{{ '/bundles/demofony2app/images/logo-with-text.png' | imagine_filter('newsletter_menu_logo') }}"
                                                         alt="GO Premià de Mar logo"/>
                                                </td>
                                                <td class="expander"></td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td class="wrapper last">
                                        <table class="eight columns">
                                            <tr>
                                                <td class="right-text-pad">
                                                    <h6>{% block title %}{% endblock %}</h6>
                                                </td>
                                                <td class="expander"></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table class="container">
                    <tr>
                        <td>
                            {% block tablebody %}
                                <table class="row">
                                    <tr>
                                        <td class="wrapper last">
                                            <table class="twelve columns">
                                                <tr>
                                                    <td>
                                                        {% block body %}body{% endblock %}
                                                    </td>
                                                    <td class="expander"></td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            {% endblock %}
                            <table class="row footer">
                                <tr>
                                    {#<td class="wrapper">#}
                                        {#<table class="six columns">#}
                                            {#<tr>#}
                                                {#<td class="left-text-pad">#}
                                                    {#<a href="http://www.premiademar.cat"><img#}
                                                                {#src="{{ '/bundles/demofony2app/images/logo-ajuntament-premia-full.png' | imagine_filter('front_menu_logo') }}"#}
                                                                {#alt="Ajuntament Premià de Mar logo"/></a>#}
                                                {#</td>#}
                                                {#<td class="expander"></td>#}
                                            {#</tr>#}
                                            {#<tr>#}
                                                {#<td class="left-text-pad"></td>#}
                                            {#</tr>#}
                                        {#</table>#}
                                    {#</td>#}
                                    <td class="wrapper last">
                                        <table class="twelve columns">
                                            <tr>
                                                <td class="last right-text-pad">
                                                    <p>
                                                        <b>Ajuntament de Premià de Mar</b><br>
                                                        Plaça de l'Ajuntament, 1 //
                                                        08330 Premià de Mar //
                                                        937 529 990<br/>
                                                        <a href="mailto: participacio@premiademar.cat">participacio@premiademar.cat</a>
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </center>
        </td>
    </tr>
</table>
</body>
</html>
