{% extends ':Front:layout.html.twig' %}

{% block title %}{{ parent() }} Â· {{ 'front.home.block.participation.title' | trans | capitalize }}{% endblock %}

{% block bodyattr %}class="participation"{% endblock %}

{% block main %}
    <div class="container">
        {#<!-- Breadcrumb -->#}
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="overlap">
                        <img class="img-responsive center-block" src="{{ 'bundles/demofony2app/images/titular-participacio.jpg' | imagine_filter('front_heading') }}" alt="{{ 'front.participation.heading' | trans }} logo"/>
                        {% block breadcrumb %}
                            <ol class="breadcrumb">
                                <li class="active">{{ 'front.participation.calendar' | trans }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>

        <div class="page-header">
            <div class="pull-right form-inline">
                <div class="btn-group">
                    <button class="btn btn-primary" data-calendar-nav="prev"><< {{ 'Previous'| trans }}</button>
                    <button class="btn btn-default" data-calendar-nav="today">{{ 'Today'|trans }}</button>
                    <button class="btn btn-primary" data-calendar-nav="next">{{ 'Next'| trans }} >></button>
                </div>
                <div class="btn-group">
                    <button class="btn btn-warning" data-calendar-view="year">{{ 'Year'| trans }}</button>
                    <button class="btn btn-warning active" data-calendar-view="month">{{ 'Month'| trans }}</button>
                    <button class="btn btn-warning" data-calendar-view="week">{{ 'Week'| trans }}</button>
                    <button class="btn btn-warning" data-calendar-view="day">{{ 'Day'| trans }}</button>
                </div>
            </div>

            <h3 id="monthName"></h3>
        </div>

        {#<!-- Main blocks -->#}
        <div class="row">
            <div class="col-md-9">
                <div id="calendar"></div>
            </div>

            <div class="col-md-3" id="eventlistContainer">
                <h4>{{ 'Events list'| trans }}</h4>
                {#<small>{{ 'This list is populated with events dynamically'| trans }}</small>#}
                <ul id="eventlist" class="nav nav-list"></ul>
            </div>
        </div>
    </div>
    <div class="modal fade" id="events-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="modalTitle">{{ 'Event' | trans }}</h3>
                </div>
                <div class="modal-body" style="height: 400px; overflow-y: auto">
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" class="btn">{{ 'Close' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="events-modalExternal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="modalTitleExternal">Event</h3>
                </div>
                <div class="modal-body" style="height: 400px; overflow-y: auto">
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" class="btn">{{ 'Close' | trans }}</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block footlangca %}{{ path('demofony2_front_participation', {'_locale': 'ca'}) }}{% endblock %}
{% block footlanges %}{{ path('demofony2_front_participation', {'_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('demofony2_front_participation', {'_locale': 'en'}) }}{% endblock %}